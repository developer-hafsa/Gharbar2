<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AdminActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/gradient2"
        android:id="@+id/upper">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_back"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/back"/>

        <ImageView
            android:layout_height="38dp"
            android:layout_width="38dp"
            android:id="@+id/img1"
            android:layout_marginTop="10dp"
            android:src="@drawable/logo_white"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/back"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name1"
            android:text="Ghar bar"
            android:fontFamily="@font/ringbearer"
            android:textStyle="bold"
            android:textColor="#FDFDFD"
            android:textSize="25sp"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/img1"
            />

        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_ad_profile"
            android:background="@drawable/oval_buttons"
            android:layout_toRightOf="@id/name1"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="90dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buy"
            android:text="Admin"
            android:fontFamily="@font/poppinsmedium"
            android:textStyle="bold"
            android:textColor="#FDFDFD"
            android:textSize="40sp"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="90dp"
            android:layout_centerHorizontal="true"
            />

<!--        <TextView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:id="@+id/buy1"-->
<!--            android:text="بیچیں"-->
<!--            android:fontFamily="@font/jameelnooriregular"-->
<!--            android:textSize="40sp"-->
<!--            android:textStyle="bold"-->
<!--            android:textColor="#FDFDFD"-->
<!--            android:layout_marginTop="50dp"-->
<!--            android:layout_marginLeft="50dp"-->
<!--            android:layout_toRightOf="@id/buy"/>-->


    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/upper"
        android:layout_above="@id/bottom_nav1"
        android:id="@+id/frame_layout">

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lower"
        android:layout_below="@id/upper"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ic_logo_background"
        android:layout_alignParentBottom="true"
        android:id="@+id/bottom_nav1"
        app:menu="@menu/bottom_nav_menu"


        />



</RelativeLayout>