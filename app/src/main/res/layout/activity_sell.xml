    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="80dp"
        android:background="#FFFFFF"
        android:elevation="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select property type"
            android:textColor="@color/colorGrey"
            android:fontFamily="@font/poppinsmedium"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:id="@+id/heading"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:foreground="?android:selectableItemBackground"
            android:layout_marginTop="15dp"
            android:id="@+id/sell_house"
            android:gravity="center"
            android:layout_below="@id/heading"
            android:orientation="horizontal"
            android:clickable="true"
            android:background="@drawable/square_button_grey">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_home"
                android:layout_marginRight="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Houses"
                android:fontFamily="@font/poppinslight"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#E452554E"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="15dp"
            android:id="@+id/sell_shop"
            android:layout_below="@+id/sell_house"
            android:gravity="center"
            android:orientation="horizontal"
            android:clickable="true"
            android:background="@drawable/square_button_grey">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_shop"
                android:layout_marginRight="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shops"
                android:fontFamily="@font/poppinslight"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/colorGrey"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="15dp"
            android:id="@+id/sell_flat"
            android:layout_below="@+id/sell_shop"
            android:gravity="center"
            android:orientation="horizontal"
            android:clickable="true"
            android:background="@drawable/square_button_grey">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_appartment"
                android:layout_marginRight="29dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Flats"
                android:fontFamily="@font/poppinslight"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/colorGrey"/>


        </LinearLayout><LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="15dp"
        android:id="@+id/sell_plot"
        android:layout_below="@+id/sell_flat"
        android:gravity="center"
        android:orientation="horizontal"
        android:clickable="true"
        android:background="@drawable/square_button_grey">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_land"
            android:layout_marginRight="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plots"
            android:fontFamily="@font/poppinslight"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorGrey"/>


    </LinearLayout>
</RelativeLayout>
    </RelativeLayout>
</RelativeLayout>